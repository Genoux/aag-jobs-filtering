{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@services/*": ["./src/services/*"],
      "@localtypes/*": ["./src/types/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils": ["./src/utils/"],
      "@queries/*": ["./src/queries/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
